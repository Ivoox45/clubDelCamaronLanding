---
import { cn } from "@/lib/cn"
import type { HTMLAttributes } from "astro/types"

type Props = HTMLAttributes<"button">

const { class: className, ...props } = Astro.props
---

<button
  class={cn(
    "bg-zinc-50 text-orange-300 inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium transition-colors focus-visible:outline-none hover:bg-zinc-50/90 h-10 px-4 py-2",
    className
  )}
  {...props}
>
  <slot />
</button>
